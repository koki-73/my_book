.note-wrapper
  = link_to "", book_note_path(note.book_id, note), class: "note-link"
  .note-info
    .note-info__user
      = "#{note.user.nickname}さんのノート"
    .note-info__likes-count
      - likes = Like.where(note_id: note.id).length
      = "❤️#{likes}"
  - note.summaries.each do |summary|
    .note-content
      .note-content__title
        = "#{summary.summary_number}. #{summary.title}"
      .note-content__content
        = "#{summary.content}"