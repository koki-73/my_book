.account-page
  .account-page__title
    ログインする
  .account-page__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "email-field"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "password-field"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "ログイン", class: "btn"
    = render "devise/shared/links"
